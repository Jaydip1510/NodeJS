<%- include('./partials/header') %>
    <%- include('./partials/sidebar') %>
        <div class="page-wrapper">
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Tables</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <a href="/blogdisplay"></a>
                            <div class="card-body">
                                <h5 class="card-title m-b-0">Blog Table</h5>
                            </div>
                            <% if(data!=null) { %>
                                <table class="table">
                                    <thead>
                                        <tr align="center">
                                            <th scope="col">Title</th>
                                            <th scope="col">ShortDescription</th>
                                            <th scope="col">CreatedOn</th>
                                            <th scope="col">UpdatedOn</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach(function(item){ %>
                                            <tr align="center">
                                                <td>
                                                  <a href="/detailblog/<%= item._id%>">  <%= item.title%></a>
                                                </td>
                                                <td>
                                                   <a href="/detailblog/<%= item._id%>"><%= item.shortdescription %></a>
                                                </td>
                                                <td>
                                                    <a href="/detailblog/<%= item._id%>"><%= item.createdOn %></a>
                                                </td>
                                                
                                                <td>
                                                    <a href="/detailblog/<%= item._id%>"><%= item.updatedOn %></a>
                                                </td>
                                                
                                                <td>
                                                    <a class="btn btn-success"
                                                        href="/editblog/<%= item._id%>">Edit</a>

                                                    <a class="btn btn-danger" href="/deleteblog/<%= item._id%>">Delete</a>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>  
                                    </tbody>
                                </table> 
                            <% } %>                           
                        </div>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <%- include('./partials/footer') %>