<%- include('./partials/header') %>
<%- include('./partials/sidebar') %>
<%- include('./partials/navbar') %>
<div class="main-panel">
<div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title"> Form elements </h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Forms</a></li>
          <li class="breadcrumb-item active" aria-current="page">Form elements</li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Employee form</h4>
  
            <form class="forms-sample" action="/empgetdata" method="post">
              <div class="form-group">
                <label for="exampleInputUsername1">Employee name</label>
                <input type="text" name="name" value="<%= (editempdata)? editempdata.name:'' %>" class="form-control" id="exampleInputUsername1" placeholder="Employeename">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">employee Age</label>
                <input type="text" name="age" value="<%= (editempdata)? editempdata.age:'' %>" class="form-control" id="exampleInputEmail1" placeholder="Employee Age">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Employee Salary</label>
                <input type="text" name="salary" value="<%= (editempdata)? editempdata.salary:'' %>" class="form-control" id="exampleInputPassword1" placeholder="Employee salary">
              </div>
              <div class="form-group">
                <label for="exampleInputConfirmPassword1">Employee Address</label>
                <input type="text" name="address" value="<%= (editempdata)? editempdata.address:'' %>" class="form-control" id="exampleInputConfirmPassword1" placeholder="Employee address">
              </div>
              <div class="form-group">
                <label for="exampleInputConfirmPassword1">Employee Education</label>
                <input type="text" name="education" value="<%= (editempdata)? editempdata.education:'' %>" class="form-control" id="exampleInputConfirmPassword1" placeholder="Employee address">
              </div>
    
              <button type="submit" class="btn btn-primary mr-2">Submit</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Employee Table</h4>
            </p>
            <div class="table-responsive">
              <% if(empData) { %>
              <table class="table">
                <thead>
                  
                  <tr align="center">
                    <th>EmpName</th>
                    <th>EmplAge</th>
                    <th>EmpSalary</th>
                    <th>EmplAddress</th>
                    <th>EmpEducation</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% empData.forEach(function(item){ %>
                  <tr align="center">
                    <td>
                      <%= item.name %>
                    </td>
                    <td>
                      <%= item.age %>
                    </td>
                    <td>
                      <%= item.salary %>
                    </td>
                    <td>
                      <%= item.address %>
                    </td>
                    <td>
                      <%= item.education %>
                    </td>
                    <td>
                      <a class="btn btn-success" href="/editdata/<%= item._id %>">Edit</a>

                      <a class="btn btn-danger" href="/empdelete/<%= item._id %>">Delete</a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('./partials/footer') %>