<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="../css/crud.css">
    <title>crud</title>
</head>

<body>
    <div class="container-fluid"></div>
    <div class="row">
        <div class="col-4 bg-primary p-5">
            <form action="/savedata" name="crudform" method="post">

                <input type="hidden" name="id" value="<%= edituser.id%>">

                <label for="">Name:</label>
                <input type="text" name="name" value="<%= edituser.name%>"><br><br>

                <label for="">Email:</label>
                <input type="email" name="email" value="<%= edituser.email%>"><br><br>

                <label for="">Age:</label>
                <input type="number" name="age" value="<%= edituser.age%>"><br><br>

                <input type="submit" class="btn btn-success" value="Submit"><br><br>
            </form>
        </div>
        <div class="col-8 bg-warning p-5 d-flex justify-content-center align-items-center">
            <table border="2" class="table table-striped">
                <tr>
                    <th><center>ID</center></th>
                    <th><center>Name</center></th>
                    <th><center>Email</center></th>
                    <th><center>Age</center></th>
                    <th><center>Action</center></th>
                </tr>
                <% data.forEach((item)=> { %>
                    <tr>
                        <td><center>
                            <%= item.id %>
                            </center>
                        </td>
                        <td><center>
                            <%= item.name %>
                            </center>
                        </td>
                        <td><center>
                            <%= item.email %>
                            </center>
                        </td>
                        <td><center>
                            <%= item.age %>
                            </center>
                        </td>
                        <td><center><a class="btn btn-success" href="/edit/<%= item.id %>">Edit</a> <a class="btn btn-danger" href="/del/<%= item.id %>">Delete</a></center></td>
                    </tr>
                    <% })%>
            </table>
        </div>
    </div>
    </div>
</body>

</html>