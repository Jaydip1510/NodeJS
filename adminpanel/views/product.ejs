<%- include('./partials/header') %>
    <%- include('./partials/sidebar',{username:username}) %>
        <div class="content">
            <%- include('./partials/navbar') %>
                <div class="container-fluid pt-4 px-4">
                    <div class="row g-4">
                        <div class="col-12 col-xl-12">
                            <div class="bg-secondary rounded h-100 p-4">
                                <h6 class="mb-4">Product</h6>
                                <form action="/allproductdata" method="post">
  
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Category</label>
                                        <select name="cat_id" class="form-select mb-3"
                                            aria-label="Default select example">
                                            <option value="">select Category</option>
                                            <option>Men</option>
                                            <option>Women</option>
                                            <option>Kids</option>
                                        </select>

                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">SubCategory</label>
                                        <select name="cat_id" class="form-select mb-3"
                                            aria-label="Default select example">
                                            <option value="">select SubCategory</option>
                                            <option>Men</option>
                                            <option>Women</option>
                                            <option>Kids</option>
                                        </select>

                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Product Name:-</label>
                                        <input type="text" class="form-control" name="pname" id="exampleInputEmail1"  aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Product Price:-</label>
                                        <input type="text" class="form-control" name="name" id="exampleInputEmail1"  aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Product Details:-</label>
                                        <input type="text" class="form-control" name="name" id="exampleInputEmail1"  aria-describedby="emailHelp">
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Product Image:-</label>
                                        <input type="file" name="image" id="image" class="form-control" aria-describedby="emailHelp">
                                    </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <%- include('./partials/footer') %>