<%- include('./partials/header') %>
    <%- include('./partials/sidebar') %>
  <div class="page-wrapper">
      <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Tables</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <a href="/productlist"></a>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title m-b-0">Product Table</h5>
                    </div>
                    <% if(details!=null) { %>
                    <table class="table">
                        <thead>
                            <tr align="center">
                                <th scope="col">Pid</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Product Price</th>
                                <th scope="col">Product Image</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% details.forEach(function(item,index){ %>
                            <tr align="center">
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= item.productname %>
                                </td>
                                <td>
                                    <%= item.productprice %>
                                </td>
                                <td>
                                    <img src="./uploads/<%= item.image %>" alt="user image" height="100px" width="100px">
                                </td>
                                <td>
                                    <a class="btn btn-success" href="/productedit?id/<%= item._id %>">Edit</a> <a class="btn btn-danger"
                                        href="/productdelete/<%= item._id%>">Delete</a>
                                </td>
                            </tr>
                        </tbody>
                        <% }) %>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>